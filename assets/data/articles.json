---
---
[
  {% assign articles_files = site.pages | where_exp: "item", "item.path contains 'output/articles'" | where_exp: "item", "item.path contains '.md'" %}
  {% for article in articles_files %}
    {
      "id": "{{ article.path | split: '/' | last | remove: '.md' }}",
      "title": {{ article.title | jsonify }},
      "date": "{% if article.date %}{{ article.date | date: '%Y-%m-%d' }}{% else %}{{ article.path | split: '/' | last | slice: 0, 10 }}{% endif %}",
      "dateText": {{ article.date_text | jsonify }},
      "source": {{ article.source | jsonify }},
      "location": {{ article.location | jsonify }},
      "people": {{ article.people | jsonify }},
      "image": "{{ site.baseurl }}{{ article.image | remove_first: '../..' }}",
      "tags": {{ article.tags | jsonify }},
      "content": {{ article.content | strip_html | strip | jsonify }},
      "excerpt": {{ article.content | strip_html | strip | truncatewords: 25 | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]