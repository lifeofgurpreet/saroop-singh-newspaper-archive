{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "new-york",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "src/app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "composite": "@/components/composite",
    "layout": "@/components/layout",
    "mobile": "@/components/mobile",
    "styles": "@/lib/styles",
    "types": "@/types",
    "hooks": "@/hooks"
  },
  "iconLibrary": "lucide",
  "registryDependencies": [
    "button",
    "card",
    "dialog",
    "input",
    "label",
    "select",
    "tabs",
    "badge",
    "checkbox",
    "progress",
    "scroll-area",
    "separator",
    "skeleton",
    "toast",
    "tooltip",
    "dropdown-menu",
    "popover",
    "command",
    "data-table"
  ],
  "customRegistry": {
    "article-card": {
      "name": "article-card",
      "dependencies": ["@/components/ui/card", "@/components/ui/badge"],
      "files": ["src/components/ui/ArticleCard.tsx"]
    },
    "article-grid": {
      "name": "article-grid",
      "dependencies": ["@/components/ui/article-card"],
      "files": ["src/components/composite/ArticleGrid.tsx"]
    },
    "filterable-grid": {
      "name": "filterable-grid",
      "dependencies": ["@/components/ui/input", "@/components/ui/select"],
      "files": ["src/components/composite/FilterableGrid.tsx"]
    },
    "searchable-list": {
      "name": "searchable-list",
      "dependencies": ["@/components/ui/input", "@/components/ui/command"],
      "files": ["src/components/composite/SearchableList.tsx"]
    }
  }
}
