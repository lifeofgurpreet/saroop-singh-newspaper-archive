---
---
[
  {% for article in site.pages %}
    {% if article.path contains 'output/articles' and article.path contains '.md' %}
      {
        "id": "{{ article.path | split: '/' | last | remove: '.md' }}",
        "title": "{{ article.title | escape }}",
        "date": "{% if article.date %}{{ article.date | date: '%Y-%m-%d' }}{% else %}{{ article.path | split: '/' | last | slice: 0, 10 }}{% endif %}",
        "dateText": "{{ article.date_text | escape }}",
        "source": "{{ article.source | escape }}",
        "location": "{{ article.location | escape }}",
        "people": [
          {% for person in article.people %}
            "{{ person | escape }}"{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ],
        "image": "{{ site.baseurl }}/raw-files/{{ article.image | split: '/' | last }}",
        "tags": [
          {% for tag in article.tags %}
            "{{ tag | escape }}"{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ],
        "content": {{ article.content | strip | jsonify }},
        "excerpt": "{{ article.content | strip_html | truncatewords: 20 | escape }}"
      }{% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]